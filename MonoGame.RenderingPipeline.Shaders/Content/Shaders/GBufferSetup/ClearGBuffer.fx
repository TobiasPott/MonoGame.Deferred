PSOut_AlbedoNormalDepth PSClear() : COLOR
{
    PSOut_AlbedoNormalDepth output;
    //black color
    output.Color = 0;
    //when transforming 0.5f into [-1,1], we will get 0.0f
    output.Normal = 0;
    //max depth
    output.Depth = 1.0f;
    return output;
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  TECHNIQUES
////////////////////////////////////////////////////////////////////////////////////////////////////////////

technique Clear
{
    pass Pass1
    {
        COMPILE_VS(VSPassthrough_F2ToF4);
        COMPILE_PS(PSClear);
    }
}
